@model IEnumerable<pawmart_jc.Models.Cliente>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        .container {
            margin-top: 50px;
        }

        .btn {
            margin-right: 5px;
        }

        .table th, .table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="text-right mb-3">
            <a class="btn btn-success" href="@Url.Action("Create")">Crear Nuevo Cliente</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo Electrónico</th>
                    <th>Dirección de Envío</th>
                    <th>Otros Datos de Contacto</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Apellido</td>
                        <td>@cliente.CorreoElectronico</td>
                        <td>@cliente.DireccionEnvio</td>
                        <td>@cliente.OtrosDatosContacto</td>
                        <td>
                            <form asp-action="Edit" asp-route-id="@cliente.Id" method="get" class="d-inline">
                                <button type="submit" class="btn btn-primary btn-sm">Editar</button>
                            </form>
                            <form asp-action="Details" asp-route-id="@cliente.Id" method="get" class="d-inline">
                                <button type="submit" class="btn btn-info btn-sm">Detalles</button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@cliente.Id" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este cliente?');" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <footer class="text-center mt-5">
        <p>&copy; 2024 Pawmart JC. Todos los derechos reservados.</p>
    </footer>
</body>
</html>
